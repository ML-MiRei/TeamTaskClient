<UserControl x:Class="TeamTaskClient.UI.Modules.Projects.UserControls.ProjectTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TeamTaskClient.UI.Modules.Projects.UserControls"
             xmlns:converters="clr-namespace:TeamTaskClient.UI.Modules.Projects.Converters"
             mc:Ignorable="d"
             Width="325"
             Height="300"
             d:DesignHeight="250"
             d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="C:\Users\feyri\source\repos\TeamTaskClient\Presentation\UI\TeamTaskClientUI\Resources\AppColors.xaml" />
                <ResourceDictionary Source="C:\Users\feyri\source\repos\TeamTaskClient\Presentation\UI\TeamTaskClientUI\Resources\AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:UserRoleConverter x:Key="UserRoleConverter" />
        </ResourceDictionary>
    </UserControl.Resources>


        <Border BorderThickness="10"
                BorderBrush="White"
                Background="White"
                CornerRadius="10">
            <Grid  Margin="-1"
                   Background="White">




                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <TextBlock Style="{StaticResource BlackHeader}"
                           VerticalAlignment="Center"
                           Grid.ColumnSpan="2"
                           Text="{Binding ProjectName, FallbackValue=ProjectName}"
                           Margin="20,0,20,0" />




                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>



                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="1"
                               Text="Leader:"
                               Margin="20,5,0,5" />


                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Text="{Binding ProjectLeaderName, FallbackValue=LeaderName}"
                               Margin="30,10,30,10" />
                </Grid>



                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Text="Number of tasks:"
                               Margin="20,5,0,5" />
                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Text="{Binding AmountTasks, FallbackValue=5}"
                               Margin="30,0,30,0" />


                </Grid>


                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Text="Sprint:"
                               Margin="20,5,0,5" />
                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Text="{Binding Sprints.Count, FallbackValue=5}"
                               Margin="30,0,30,0" />


                </Grid>



                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Text="My role:"
                               Margin="20,5,0,5" />
                    <TextBlock Style="{StaticResource SimpleBlackText}"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Text="{Binding UserRole, Converter={StaticResource UserRoleConverter}, FallbackValue=Employee}"
                               Margin="30,0,30,0" />


                </Grid>




            </Grid>
        </Border>
</UserControl>
